{
  "name": "ttrpg-stats",
  "version": "1.1.2",
  "description": "TTRPG Stats allows you create your character sheet in obsidian with dynamic components that allow you to track your hp, spellslots, gold and way more.",
  "main": "main.js",
  "keywords": [],
  "author": "",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "setup": "node setupScript.mjs",
    "verify": "node verifySetup.mjs",
    "preinstall": "node verifySetup.mjs",
    "dev": "vite build --mode development --watch",
    "build": "node verifySetup.mjs && vite build --mode production",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json && tsc -p tsconfig.node.json",
    "version": "npm version minor && node version-bump.mjs && git add manifest.json versions.json"
  },
  "devDependencies": {
    "@clack/prompts": "^0.9.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.2",
    "@tsconfig/svelte": "^5.0.4",
    "svelte": "^5.14.3",
    "svelte-check": "^4.1.1",
    "tslib": "^2.8.1",
    "typescript": "~5.6.2",
    "vite": "^6.0.3"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.0.0-beta.8",
    "@types/node": "^22.10.2",
    "obsidian": "^1.7.2",
    "tailwindcss": "^4.0.0-beta.8"
  }
}